{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2023"],
        "module": "node16",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2023",
        "verbatimModuleSyntax": true
    },
    "exclude": ["**/*.spec.ts"],
    "include": ["src/**/*"]
}
